var filters = {
    toFix: function (value) {
        return value.toFixed(2) // 此处2为保留两位小数，保留几位小数，这里写几    
    },
    toCommaArrray: function (value,con){
        return value.split(con) // 字符串逗号分隔转数组   
    }
}
module.exports = {
    toFix: filters.toFix,
    toCommaArrray: filters.toCommaArrray
}
