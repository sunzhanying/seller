/* pages/mine/confirmOrder/confirmOrder.wxss */

.confirmOrder {
  position: relative;
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
}

.bgc {
  width: 100%;
  background-color: #e7c778;
  height: 100rpx;
  border-radius: 0 0 30rpx 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.orderCard {
  width: 710rpx;
  height: 422rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.05);
  opacity: 1;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 999;
}

.itemInfo {
  padding-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.itemTitle {
  width: 96rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.itemContent {
  width: 574rpx;
  height: 80rpx;
  background: rgba(242, 242, 242, 1);
  opacity: 1;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.total {
  display: flex;
  align-items: center;
  float: right;
  margin-top: 30rpx;
}

.all {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(119, 119, 119, 1);
  opacity: 1;
}

.number {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  margin-left: 46rpx;
}

.description {
  margin-top: 20rpx;
  padding: 20rpx;
}

.title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.content {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.footer {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}

.sum {
  width: 77%;
  height: 98rpx;
  line-height: 98rpx;
  margin-left: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.yellow {
  color: #e7c778;
}

.enter {
  width: 33%;
  height: 100%;
  line-height: 98rpx;
  background: rgba(231, 199, 120, 1);
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}
