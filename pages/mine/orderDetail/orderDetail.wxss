.orderDetail {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  box-sizing: border-box;
  position: relative;
}

.gap {
  width: 100%;
  height: 10rpx;
}

.detail_top {
  width: 100%;
  height: 340rpx;
  background-color: #fff;
  padding: 10rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.leftTxt {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-right: 40rpx;
  opacity: 1;
}

.line {
  display: flex;
  justify-content: space-evenly;
  padding-top: 20rpx;
}

.detailBox {
  width: 574rpx;
  height: 80rpx;
  background: rgba(242, 242, 242, 1);
  opacity: 1;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.cardTicket {
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.title {
  width: 64rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  margin-bottom: 10rpx;
}

.item {
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  /* border-bottom: 2rpx solid #e6e6e6; */
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  padding-top: 10rpx;
  padding: 10rpx 20rpx 0rpx;
  position: relative;
}

.item::after {
  position: absolute;
  width: w;
}

.detailList {
}

.line1 {
  width: 670rpx;
  height: 0px;
  border: 2rpx solid rgba(230, 230, 230, 1);
  opacity: 1;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.item:last-child .line1 {
  border: none;
}

.productImg {
  width: 170rpx;
  height: 170rpx;
  padding-top: 10rpx;
}

.productInfo {
  /* width: 100%; */
  height: 100%;
}

.itemInfo {
  width: 490rpx;
  height: 50rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 8rpx;
  padding: 8rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 10rpx;
}

.useLegend {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  padding-left: 20rpx;
}

.legengDetail {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(51, 51, 51, 1);
