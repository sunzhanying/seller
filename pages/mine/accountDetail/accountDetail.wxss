/* pages/mine/accountDetail/accountDetail.wxss */

.accountDetail {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  opacity: 1;
  overflow: hidden;
}

.infoCard {
  width: 100%;
  height: 276rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  margin-top: 10rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
}

.item {
  height: 92rpx;
  line-height: 92rpx;
  border-bottom: 2rpx solid #ccc;
  position: relative;
}

.title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  float: left;
}

.Info {
  float: right;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(119, 119, 119, 1);
  opacity: 1;
  margin-right: 10px;
}
.arrow{
  width: 20rpx;
  height: 20rpx;
  float: right;
  display: block;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}