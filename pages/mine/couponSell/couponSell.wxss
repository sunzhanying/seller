  border: 4rpx solid #e7c778;
}

.enterpsd {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f2f2f2;
  padding: 20rpx 0 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 10rpx;
}

.mgb-20 {
  margin-bottom: 20rpx;
}

.mgt-20 {
  margin-top: 20rpx;
}

.enterInfo_2 {
  display: flex;
}
.enter_left,.second_left{
