.couponSell {
  width: 100%;
  height: 100%;
  background: rgba(242, 242, 242, 1);
}

.cardInfo {
  margin-top: 10rpx;
  width: 100%;
  height: 340rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  box-sizing: border-box;
  padding: 10rpx 40rpx 30rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.title {
  width: 96rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.detail {
  width: 574rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  background: rgba(242, 242, 242, 1);
  opacity: 1;
  border-radius: 8px;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.cardCode {
  margin: 40rpx 20rpx 20rpx;
}

.toggle {
  display: flex;
  width: 100%;
  height: 88rpx;
}

.card_detail {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: rgba(231, 199, 120, 1);
  font-family: PingFang SC;
  font-weight: 400;
  background-color: #fff;
  border-radius: 8rpx 8rpx 0px 0px;
}

.active {
  background-color: rgba(231, 199, 120, 1) !important;
  color: #fff !important;
}

.enterInfo_1 {
  border-bottom: 2rpx solid #e6e6e6;
}

.psd_first {
  padding: 10rpx 20rpx 0;
  background-color: #fff;
