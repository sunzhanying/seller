}

.shortInput {
  width: 100%;
  height: 80rpx;
  background: rgba(242, 242, 242, 1);
  opacity: 1;
  border-radius: 8rpx;
  padding: 20rpx 0 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.deleteInfo {
  width: 68rpx;
  height: 170rpx;
  background: rgba(242, 242, 242, 1);
  opacity: 1;
  border-radius: 8rpx;
  margin-left: 10rpx;
  position: relative;
}

.deleteIcon {
  width: 24rpx;
  height: 32rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.addPsd {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}

.addIcon {
  width: 26rpx;
  height: 26rpx;
}

.addTxt {
  width: 140rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(231, 199, 120, 1);
  opacity: 1;
  margin-left: 8rpx;
}

.addPsd {
  display: flex;
  justify-content: center;
}

.addBox {
  display: flex;
  align-items: center;
}

.second_1 {
