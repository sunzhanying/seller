  border-bottom: 2rpx solid #e6e6e6;
  box-sizing: border-box;
}

.psd_second {
  background-color: #fff;
  border: 4rpx solid #e7c778;
}

.second_2 {
  padding: 20rpx 20rpx 0rpx;
  box-sizing: border-box;
  display: flex;
}

.second_right {
  position: relative;
  width: 68rpx;
  height: 260rpx;
  background: rgba(242, 242, 242, 1);
  opacity: 1;
