/* pages/mine/memberInformation/memberInformation.wxss */

.memberInformation {
  width: 100%;
  height: 100%;
  background: #F2F2F2;
}

.memberInformation_bottom_text {
  width: 336rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(170, 170, 170, 1);
  line-height: 34rpx;
  margin: 44rpx auto 0;
}

.memberInformation_btn {
  width: 710rpx;
  height: 88rpx;
  background: rgba(231, 199, 120, 1);
  box-shadow: 0px 4rpx 16rpx rgba(231, 199, 120, 0.8);
  opacity: 1;
  border-radius: 8rpx;
  margin-top: 80rpx;
}

.container {
  padding: 0 40rpx;
  background: rgba(255, 255, 255, 1);
}

.item {
  display: flex;
  height: 92rpx;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}
.item:last-of-type{
  border: none;
}

.info {
  width: 134rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.Enter {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(204, 204, 204, 1);
  opacity: 1;
}

.color {
  color: #ccc;
}

.tel {
  position: relative;
}

.sendCode {
  /* width: 172rpx; */
  /* height: 52rpx; */
  padding: 6rpx 16rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 52rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(231, 199, 120, 1);
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(231, 199, 120, 1);
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
