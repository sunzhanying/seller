/* pages/home/withdraw/withdraw.wxss */

.withdraw {
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.topCard {
  width: 100%;
  height: 165rpx;
  /* height: 296rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1);
  opacity: 1;
  border-radius: 8rpx;
}

.number {
  font-size: 60rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 84rpx;
  color: rgba(231, 199, 120, 1);
  opacity: 1;
  text-align: center;
}

.introduction {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  text-align: center;
  margin-bottom: 30rpx;
}

.req {
  width: 140rpx;
  height: 60rpx;
  background: rgba(231, 199, 120, 1);
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 1;
  text-align: center;
  margin: 0 auto 26rpx;
}

.circuit {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(170, 170, 170, 1);
  opacity: 1;
  text-align: center;
}

.statusList {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.statusLi {
  width: 100%;
  height: 206rpx;
  padding-top: 20rpx;
  border-bottom: 2rpx dashed #ccc;
  box-sizing: border-box;
}

.item {
  display: flex;
  margin-bottom: 10rpx;
}

.status_txt {
  width: 170rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(152, 152, 152, 1);
  opacity: 1;
}

.container {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.wait {
  color: #e7c778;
}

.success {
  color: red;
}
