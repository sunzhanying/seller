/* pages/tab/wineTasting/wineTasting.wxss */

.sideText {
  /* margin: 0 auto; */
  text-align: center;
  display: inline-block;
  margin-left: 8rpx;
}

.noMore {
  font-size: 24rpx;
  text-align: center;
  margin-top: 50rpx;
}

.wine_side {
  width: 180rpx;
  height: 100%;
  background: #fff;
}

.wine_side_li {
  width: 160rpx;
  height: 88rpx;
  /* padding: 26rpx 16rpx 22rpx 30rpx; */
  box-sizing: border-box;
  /* position: relative; */
  display: flex;
  justify-content: center;
}

.product-List {
  width: 100%;
  height: 100%;
}

.wine_Tasting_img {
  width: 6rpx;
  height: 60rpx;
  display: block;
  /* position: absolute; *//* top: -10rpx; *//* left: 7rpx; *//* transform: translateY(50%); */
}

.wine_content {
  width: 590rpx;
  /* padding: 0 20rpx; */
}

.wine_banner_box {
  width: 550rpx;
  height: 240rpx;
  overflow: hidden;
}

.wine_banner_text {
  width: 90%;
  color: #fff;
  margin: 24rpx 16rpx 0;
}

.wine_banner_text_title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
}

.wine_banner_text_con {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
  margin-top: 8rpx;
}

.wine_banner_text_pic {
  height: 28rpx;
  line-height: 28rpx;
  margin-top: 54rpx;
  border-left: 2rpx solid #e7c778;
  padding-left: 10rpx;
}

/* search */

.search_icon {
  width: 36rpx;
  height: 36rpx;
}

.wine_search_box {
  width: 508rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /*垂直居中*/
  margin: 20rpx 0 10rpx;
  padding: 0 22rpx;
}

.wine_search_input {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(119, 119, 119, 1);
  line-height: 40rpx;
}

.wine_list_li {
  background: #fff;
  display: flex;
  width: 550rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.wine_list_li_img_box {
  width: 194rpx;
  height: 200rpx;
  overflow: hidden;
}

.wine_list_li_img {
  width: 194rpx;
  height: 194rpx;
  vertical-align: middle;
}

.wine_list_li_con {
  width: 320rpx;
  margin-left: 20rpx;
  padding: 10rpx 0;
}

.wine_list_li_con_title {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

.wine_list_li_con_price_con {
  font-size: 32rpx;
  font-weight: 400;
  color: #e7c778;
  line-height: 46rpx;
}

.wine_list_li_con_original_price {
  width: 30rpx;
  height: 27rpx;
}

.wine_list_li_con_original_price image {
  width: 32rpx;
  height: 29rpx;
  vertical-align: top;
}

.wine_left_scroll::-webkit-scrollbar {
  width: 0 !important;
}

.stockBox {
  display: flex;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(119, 119, 119, 1);
  opacity: 1;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(231, 199, 120, 1);
  margin-top: 10rpx;
  justify-content: space-between;
}

