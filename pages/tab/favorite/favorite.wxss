/* pages/tab/favorite/favorite.wxss */

.favorite_li {
  width: 100%;
  height: 192rpx;
  background-color: #fff;
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.2);
  opacity: 1;
  border-radius: 8rpx;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: left;
  margin-bottom: 20rpx;
}

.left_icon {
  width: 148rpx;
  height: 152rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
}

.txt_container {
  width: 494rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  margin-left: 24rpx;
}

.txt_first {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.txt_second {
  height: 63rpx;
  line-height: 63rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #e7c778;
}

.txt_second_left, .txt_second_right {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(119, 119, 119, 1);
  opacity: 1;
}

.txt_third {
  margin-top: 13rpx;
  display: flex;
  justify-content: space-between;
}

.money {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 44rpx;
  color: rgba(231, 199, 120, 1);
  opacity: 1;
}

.heart {
  width: 30rpx;
  height: 27rpx;
}
.nofavorite{
  font-size: 24rpx;
  text-align: center;
}