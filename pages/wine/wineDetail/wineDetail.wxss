/* pages/wine/wineDetail/wineDetail.wxss */
@import '../../../wxParse/wxParse.wxss';
@import '/components/shareSave/shareSave.wxss';

.wxParse-img {
    width: 710rpx !important;
}

.wine_detail_banner {
    width: 100%;
    /* width: 520rpx;
    height: 520rpx; */
    height: 520rpx;
}

.wine_detail_inventory {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(51, 51, 51, 1);
    margin: 10rpx 0 30rpx;
}

.wine_detail_txt_pic {
    font-size: 52rpx;
    font-weight: 400;
    color: rgba(231, 199, 120, 1);
    line-height: 74rpx;
}

.wine_detail_txt_title {
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 44rpx;
    margin-top: 16rpx;
}

.wine_shopping {
    padding: 0 10rpx;
}

.wine_detail_txt_subtitle {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(170, 170, 170, 1);
    line-height: 40rpx;
    margin-top: 20rpx;
}

.wine_detail_txt_year {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 34rpx;
    margin-top: 8rpx;
}

.wine_detail_txt_shipping {
    font-size: 28rpx;
    font-weight: 600;
    color: rgba(0, 0, 0, 1);
    line-height: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
}

.wine_detail_title_box {
    /* height: 34rpx; */
    margin: 30rpx 0;
    line-height: 34rpx;
}

.wine_detail_title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    height: 34rpx;
    /* border-left: 4rpx solid #e7c778;
    padding-left: 20rpx; */
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 34rpx;
}

.go_home_icon {
    width: 46rpx;
    height: 44rpx;
}

.footer_bottom_go {
    width: 150rpx;
    text-align: center;
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(51, 51, 48, 1);
    line-height: 28rpx;
}

.wine_detail_buy_btn {
    width: 200rpx;
    height: 100rpx;
    background: rgba(231, 199, 120, 1);
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 100rpx;
    text-align: center;
}

.wine_detail_share {
    width: 180rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 100rpx;
    text-align: center;
    padding: 0 15rpx;
    background: #fff;
}

.wine_detail_rule {
    width: 100%;
    height: 10rpx;
    vertical-align: middle;
}