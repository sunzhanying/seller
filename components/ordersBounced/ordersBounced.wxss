/* components/ordersBounced/ordersBounced.wxss */

/* 订单弹框 */

.ca_cover {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.4;
    z-index: 1;
}

.confirm_cancel_box {
    position: absolute;
    top: 0;
    right: 0;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.confirm_alert {
    width: 100%;
}

.confirm_cancel {
    width: 32rpx;
    height: 32rpx;
}

.gi_img {
    width: 152rpx;
    height: 152rpx;
}

.num_add_icon {
    display: inline-block;
    width: 60rpx;
    height: 44rpx;
    background: rgba(230, 230, 230, 1);
    font-size: 36rpx;
    font-weight: 600;
    text-align: center;
    line-height: 42rpx;
}

.sel_num_title {
    font-size: 28rpx;
    font-weight: 500;
}

.gift_num {
    font-size: 28rpx;
    margin: 0 5rpx;
    color: #333;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 24rpx;
    border: 2rpx solid rgba(230, 230, 230, 1);
}

/* .pay_box {
    font-size: 30rpx;
} */

.wefare_fn {
    width: 710rpx;
    height: 88rpx;
    background: rgba(231, 199, 120, 1);
    box-shadow: 0rpx 4rpx 0rpx 0rpx rgba(231, 199, 120, 0.8);
    border-radius: 4rpx;
    margin: 52rpx auto 38rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: #fff;
    line-height: 88rpx;
}

.wefare_inner {
    position: fixed;
    width: 100%;
    background-color: #fff;
    overflow: hidden;
    z-index: 20;
    bottom: 0;
}

.wefare_text {
    margin: 0 20rpx;
    padding: 22rpx 0;
    color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 2rpx solid #e6e6e6;
    border-bottom: 2rpx solid #e6e6e6;
}

.choose_list {
    display: flex;
    padding: 24rpx 20rpx 10rpx;
}

.gii_title {
    font-size: 24rpx;
    color: #333;
}

.gii_title_price {
    font-size: 40rpx;
    color: #e7c778;
    margin-top: 6rpx;
}

.choose_price {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(170, 170, 170, 1);
    line-height: 34rpx;
    margin-top: 14rpx;
}
.choose_info{
    margin: 24rpx 44rpx;
}


.gii_title_text{
    height:26rpx;
    border-radius:13rpx;
    border:1rpx solid rgba(231,199,120,1);
    font-size:20rpx;
    font-weight:300;
    color:rgba(231,199,120,1);
    line-height:26rpx;
    padding: 0 8rpx;
    margin-right: 30rpx;
}