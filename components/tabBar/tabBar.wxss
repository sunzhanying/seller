/* components/tabbar/tabBar.wxss */

.tabBar {
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0px -1px 0px rgba(204, 204, 204, 1);
  display: flex;
}

.tab {
  flex: 1;
  text-align: center;
  padding-top: 24rpx;
  box-sizing: border-box;
}

.icon {
  width: 36rpx;
  height: 34rpx;
}

.text {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  opacity: 1;
}
.active{
  color:rgba(231,199,120,1);
}